REGEDIT4

;Force MesaFx 16bit textures and 16bit rendering for 3dfx Tools in glide section

;Glide variable holder with default value "1"
[HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Services\3dfxvs\Device0\GLIDE]
"FX_MESA_FORCE_16BPP_TEXTURES" = "1"
"FX_MESA_FORCE_16BPP_PIX" = "1"

;Folder with all entries
[HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Services\3dfxvs\Device0\GLIDE\MesaFx Force 16bit textures]
@ = ""
"Control" = "Combo"
"Default" = "1"
"List" = "Disable,Enable"
"Tweak Map" = "*,1"
"Tweak Value" = "FX_MESA_FORCE_16BPP_TEXTURES"
"Help" = "Forces 16bit textures, default MesaFx is 32bit - This will only affect OpenGl games"
"Value" = "1"

;Folder with all entries
[HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Services\3dfxvs\Device0\GLIDE\MesaFx Force 16bit rendering]
@ = ""
"Control" = "Combo"
"Default" = "1"
"List" = "Disable,Enable"
"Tweak Map" = "*,1"
"Tweak Value" = "FX_MESA_FORCE_16BPP_PIX"
"Help" = "Forces 16bit rendering, default MesaFx is 32bit - This will only affect OpenGl games"
"Value" = "1"

